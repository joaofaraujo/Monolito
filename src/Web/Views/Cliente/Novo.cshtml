@model Web.Models.ClienteViewModel
@{
    ViewBag.Title = "Novo Cliente";
}

@if (Model != null && Model.Id > 0)
{
    <div class="alert alert-success" role="alert">
        @Model.Nome salvo com sucesso!
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-0">
            <div class="card-header">
                <h2><i class="fas fa-plus-circle"></i> Novo Cliente</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Novo", "Cliente", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <label for="txtNome">Nome do Cliente</label>
                            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", autocomplete = "off", maxlength = 200, id = "txtNome", placeHolder = "Informe o nome do cliente" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <label for="txtNome">CPF do Cliente</label>
                            @Html.TextBoxFor(x => x.CPF, new { @class = "form-control", autocomplete = "off", maxlength = 11, id = "txtCPF", placeHolder = "Informe o CPF do cliente" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <label for="txtNome">E-mail do Cliente</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", autocomplete = "off", maxlength = 200, id = "txtEmail", placeHolder = "Informe o e-mail do cliente" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <label for="txtNome">Celular do Cliente</label>
                            @Html.TextBoxFor(x => x.Celular, new { @class = "form-control", autocomplete = "off", maxlength = 200, id = "txtCelular", placeHolder = "Informe o celular do cliente" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-lg-12">
                            <label for="txtNome">Preferencia de Comunicação</label>
                            @Html.EnumDropDownListFor(x => x.Canal, "Selecione o canal", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="text-right">
                        <a href="@Url.Action("Index")" class="btn btn-primary" role="button" aria-label="Voltar para a tela anterior" id="btnVoltarTela">
                            <span class="fa fa-undo"></span> Voltar
                        </a>
                        <button class="btn btn-success" type="submit" aria-label="Salvar cliente" id="btnSalvarCliente">
                            <span class="fas fa-check-circle"></span> Salvar
                        </button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

