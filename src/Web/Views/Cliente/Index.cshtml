@model List<Web.Models.ClienteViewModel>
@{
    ViewBag.Title = "Clientes";
}

<div class="row" style="margin:15px 0;">
    <div class="col-lg-12">
        <div class="card border-0">
            <div class="card-body">
                <div class="text-right">
                    <a href="@Url.Action("Novo")" class="btn btn-primary" role="button" aria-label="Novo cliente" id="btnNovo">
                        <span class="fa fa-undo"></span> Novo cliente
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered table-striped order-column w-100" cellspacing="0" id="tabelaAplicativos">
                            <thead>
                                <tr>
                                    <th>Ações</th>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>E-mail</th>
                                    <th>Celular</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr id="linha_@item.Id">
                                    <td style="white-space: nowrap;">
                                        @Html.ActionLink(" ", "Editar", "Cliente", new { id = item.Id }, new { @class = "fas fa-edit", id = "Editar_" + item.Id, data_toggle = "tooltip", data_placement = "top", title = "Editar Cliente" })
                                        <button class="btn btn-sm btn-link text-danger fas fa-trash-alt botao-exclusao-tabela" data-toggle="tooltip" data-placement="top" title="Excluir Cliente"> </button>
                                    </td>
                                    <td>@item.Id</td>
                                    <td>@item.Nome</td>
                                    <td>@item.Email</td>
                                    <td>@item.Celular</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
